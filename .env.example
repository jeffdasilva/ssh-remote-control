# SSH Remote Control Dashboard Environment Configuration
# Copy this file to .env and update with your settings

# Application settings
DEBUG=false
LOG_LEVEL=info

# Web server settings
WEB_HOST=127.0.0.1
WEB_PORT=8000

# SSH connection settings
SSH_CONNECT_TIMEOUT=30
SSH_KEEPALIVE_INTERVAL=60

# Example server configurations
# Format: SSH_SERVERS_<server_name>_<setting>=<value>

# Production server example
SSH_SERVERS_production_HOST=prod.example.com
SSH_SERVERS_production_PORT=22
SSH_SERVERS_production_USERNAME=deploy
SSH_SERVERS_production_KEY_FILE=/path/to/production_key
SSH_SERVERS_production_KNOWN_HOSTS=/path/to/known_hosts

# Staging server example
SSH_SERVERS_staging_HOST=staging.example.com
SSH_SERVERS_staging_PORT=22
SSH_SERVERS_staging_USERNAME=deploy
SSH_SERVERS_staging_KEY_FILE=/path/to/staging_key

# Development server example
SSH_SERVERS_development_HOST=dev.example.com
SSH_SERVERS_development_PORT=2222
SSH_SERVERS_development_USERNAME=developer
SSH_SERVERS_development_KEY_FILE=/path/to/dev_key

# Database server example
SSH_SERVERS_database_HOST=db.example.com
SSH_SERVERS_database_PORT=22
SSH_SERVERS_database_USERNAME=dbadmin
SSH_SERVERS_database_KEY_FILE=/path/to/db_key

# Monitoring server example
SSH_SERVERS_monitoring_HOST=monitor.example.com
SSH_SERVERS_monitoring_PORT=22
SSH_SERVERS_monitoring_USERNAME=monitor
SSH_SERVERS_monitoring_KEY_FILE=/path/to/monitor_key
